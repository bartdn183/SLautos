        <h3 class="text-center">All Cars</h3>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Brand - Model</th>
              <th>Year</th>
              <th>Price</th>
              <th>Mileage</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @cars.each do |car| %>
              <tr>
                <td><%= car.brand.name %> <%= car.brand.model %></td>
                <td><%= car.year %></td>
                <td><%= number_to_currency car.features["Price"] %></td>
                <td><%= car.features["Mileage"] %></td>
                <td><%= link_to 'Show', car %></td>
                <td><%= link_to 'Edit', edit_car_path(car), remote: true %></td>
                <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>