<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
<%= form_with(model: @brand, remote: true) do |form| %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Brand...", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= form.text_field :model, placeholder: "Model...", class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= form.submit "Set Brand - Model", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
</div>
</div>
